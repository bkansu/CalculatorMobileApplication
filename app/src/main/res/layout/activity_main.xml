<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="350dp"
            android:layout_height="83dp"
            android:layout_gravity="center"
            android:background="@drawable/black"
            android:ems="10"
            android:inputType="numberSigned"
            android:text=""
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="31dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnArti"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/black"
                    android:onClick="btnClick"
                    android:text="+"
                    android:textColor="@color/black"
                    app:backgroundTint="#FFC107" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="30dp"
                    android:layout_height="29dp" />

                <Button
                    android:id="@+id/btnEksi"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:onClick="btnClick"
                    android:text="-"
                    android:textColor="@color/black"
                    app:backgroundTint="#FFC107" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="30dp"
                    android:layout_height="29dp" />

                <Button
                    android:id="@+id/btnCarpi"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:onClick="btnClick"
                    android:text="*"
                    android:textColor="@color/black"
                    app:backgroundTint="#FFC107" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="30dp"
                    android:layout_height="29dp" />

                <Button
                    android:id="@+id/btnBolu"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:onClick="btnClick"
                    android:text="/"
                    android:textColor="@color/black"
                    app:backgroundTint="#FFC107" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="30dp"
                    android:layout_height="29dp" />

                <Button
                    android:id="@+id/btnArtiEksi"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:onClick="btnClick"
                    android:text="+/-"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    app:backgroundTint="#FFC107" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content" />

            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="66dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="31dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn0"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/black"
                    android:onClick="btnClick"
                    android:text="0"
                    android:textColor="@color/black"
                    app:backgroundTint="#0FFFFFFF" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="30dp"
                    android:layout_height="29dp" />

                <Button
                    android:id="@+id/btnNokta"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/black"
                    android:onClick="btnClick"
                    android:text="."
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:backgroundTint="#0FFFFFFF" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="30dp"
                    android:layout_height="29dp" />

                <Button
                    android:id="@+id/bttnClear"
                    android:layout_width="162dp"
                    android:layout_height="65dp"
                    android:background="@drawable/byellow"
                    android:text="CLEAR"
                    android:textColor="@color/black"
                    android:onClick="clearClick"
                    app:backgroundTint="#FF5722" />

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="286dp"
                android:layout_height="193dp">

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/black"
                    android:onClick="btnClick"
                    android:text="7"
                    android:textColor="@color/black"
                    app:backgroundTint="#0FFFFFFF"
                    app:layout_column="2"
                    app:layout_row="2" />

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/black"
                    android:onClick="btnClick"
                    android:text="4"
                    android:textColor="@color/black"
                    app:backgroundTint="#0FFFFFFF"
                    app:layout_column="2"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/black"
                    android:onClick="btnClick"
                    android:text="9"
                    android:textColor="@color/black"
                    app:backgroundTint="#0FFFFFFF"
                    app:layout_column="6"
                    app:layout_row="2" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/black"
                    android:onClick="btnClick"
                    android:text="5"
                    android:textColor="@color/black"
                    app:backgroundTint="#0FFFFFFF"
                    app:layout_column="4"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/black"
                    android:onClick="btnClick"
                    android:text="6"
                    android:textColor="@color/black"
                    app:backgroundTint="#0FFFFFFF"
                    app:layout_column="6"
                    app:layout_row="1" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="31dp"
                    android:layout_height="wrap_content"
                    app:layout_column="1"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/black"
                    android:onClick="btnClick"
                    android:text="1"
                    android:textColor="@color/black"
                    app:backgroundTint="#0FFFFFFF" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="30dp"
                    android:layout_height="29dp" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/black"
                    android:onClick="btnClick"
                    android:text="2"
                    android:textColor="@color/black"
                    app:backgroundTint="#0FFFFFFF" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="30dp"
                    android:layout_height="29dp" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/black"
                    android:onClick="btnClick"
                    android:text="3"
                    android:textColor="@color/black"
                    app:backgroundTint="#0FFFFFFF" />

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/black"
                    android:onClick="btnClick"
                    android:text="8"
                    android:textColor="@color/black"
                    app:backgroundTint="#0FFFFFFF"
                    app:layout_column="4"
                    app:layout_row="2" />

            </androidx.gridlayout.widget.GridLayout>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="30dp"
                android:layout_height="29dp" />

            <Button
                android:id="@+id/btnEsittir"
                android:layout_width="64dp"
                android:layout_height="189dp"
                android:onClick="calculateClick"
                android:text="="
                android:textColor="@color/black"
                app:backgroundTint="#00BCD4" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>